<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/spaceConstraintView"
        android:layout_width="60dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

<!--        <com.google.android.material.divider.MaterialDivider-->
<!--            android:id="@+id/dividerLine"-->
<!--            android:layout_width="1dp"-->
<!--            android:layout_height="0dp"-->
<!--            app:dividerColor="@color/black"-->
<!--            app:dividerThickness="1dp"-->
<!--            android:layout_marginBottom="0dp"-->
<!--            app:layout_constraintBottom_toBottomOf="parent"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintTop_toTopOf="parent" />-->

        <View
            android:id="@+id/longLineView"
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:background="@drawable/dash_lines_vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/connectedDeviceCL"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/spaceConstraintView"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/connectionView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/conTopView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/dash_lines"
            android:rotation="90"
            app:layout_constraintEnd_toEndOf="@+id/connectionView"
            app:layout_constraintStart_toStartOf="@+id/connectionView"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/conBottomView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/dash_lines"
            android:rotation="90"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/connectionView"
            app:layout_constraintStart_toStartOf="@+id/connectionView" />

        <View
            android:id="@+id/conEndView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/dash_lines"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/connectionView"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/connectedMobileIV"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:src="@drawable/mobile_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/connectionView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/conDeviceNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Device Name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/connectedMobileIV"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/conSubRouterCL"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/connectedDeviceCL">

        <View
            android:id="@+id/conTopView2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/dash_lines"
            android:rotation="90"
            app:layout_constraintEnd_toEndOf="@+id/conSubRouterCL"
            app:layout_constraintStart_toStartOf="@+id/conSubRouterCL"
            app:layout_constraintTop_toTopOf="@id/conSubRouterCL" />


        <View
            android:id="@+id/conEndView2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/dash_lines"
            app:layout_constraintEnd_toEndOf="@+id/conSubRouterCL"
            app:layout_constraintTop_toTopOf="@id/conSubRouterCL" />

<!--        <View-->
<!--            android:id="@+id/conBottomView2"-->
<!--            android:layout_width="30dp"-->
<!--            android:layout_height="30dp"-->
<!--            android:background="@drawable/dash_lines"-->
<!--            android:rotation="90"-->
<!--            app:layout_constraintEnd_toEndOf="@+id/conSubRouterCL"-->
<!--            app:layout_constraintStart_toStartOf="@+id/conSubRouterCL"-->
<!--            app:layout_constraintBottom_toBottomOf="@id/conSubRouterCL" />-->


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/subRecyclerView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/spaceConstraintView"
        app:layout_constraintTop_toBottomOf="@id/connectedDeviceCL"
        tools:itemCount="6" />



</androidx.constraintlayout.widget.ConstraintLayout>